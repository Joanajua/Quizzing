@model Question

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Question</h1>

<h3>Deleting this question will delete all the answer associated to it. Are you sure you want to delete?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="QuestionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Quizzes" asp-action="Edit" asp-route-id="@Model.QuizId">Back to Quiz</a>
    </form>
</div>
